@page "/counter/{initValueCounter?}"
@inject ILogger<Counter> Logger;

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public string? initValueCounter { get; set; }

    public override async Task SetParametersAsync(ParameterView parameterView)
    {
        if (parameterView.TryGetValue<string>(nameof(initValueCounter), out var value))
        {
            if (value is not null)
                initValueCounter = value;
        }
        await base.SetParametersAsync(parameterView);
    }

    protected override void OnInitialized()
    {
        Logger.LogInformation($"initValueCounter: {initValueCounter}");
        currentCount = initValueCounter != null ? int.Parse(initValueCounter) : 0;
    }

    private void IncrementCount()
    {
        currentCount++;
        StateHasChanged();
    }
}
